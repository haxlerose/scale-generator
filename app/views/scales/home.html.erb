
<%= form_tag(controller: "scales", action:"pitches", method: "post") do %>
  <%= label_tag(:key, "Key:") %>
  <%= text_field_tag(:key) %>
  <%= label_tag(:scale, "Scale:") %>
  <%= text_field_tag(:scale) %>
  <%= label_tag(:pattern, "Pattern:") %>
  <%= text_field_tag(:pattern) %>
  <%= submit_tag("Find Scale") %>
<% end %>

<%= "#{@key} #{@scale} #{@pattern}" %><br />
<%= "#{@scale_flat} #{@scale_sharp}" %><br />

<%= link_to 'Home', root_path %>
